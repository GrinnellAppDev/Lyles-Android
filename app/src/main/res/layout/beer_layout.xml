<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/beer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp">

    </RelativeLayout>

    <ImageView
        android:id="@+id/beer_image"
        android:layout_width="@dimen/menu_image_len"
        android:layout_height="@dimen/menu_image_len"
        android:src="@drawable/ic_beer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/beer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer_type"
        android:layout_alignBottom="@+id/beer_image"
        android:layout_toRightOf="@+id/beer_image"
        android:layout_toEndOf="@+id/beer_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer_name"
        android:layout_alignTop="@+id/beer_image"
        android:layout_alignLeft="@+id/beer_type"
        android:layout_alignStart="@+id/beer_type" />


</RelativeLayout>