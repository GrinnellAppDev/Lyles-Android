<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="5dp"
        android:elevation="300dp"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:layout_width="68dp"
            android:layout_height="62dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivImage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubtitle"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:textSize="16dp"

            />

        <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:text="Grupo Modelo, Anheuser-Busch InBev\n\nAlcohol by volume:4.5%\n \nThe Corona brand is one of the top-selling beers worldwide. Outside Mexico, Corona is commonly served with a wedge of lime or lemon in the neck of the bottle to add tartness and flavor."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetails"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:text="star"
            android:textSize="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btFavourite"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="34dp"/>

    </android.support.v7.widget.CardView>
 </RelativeLayout>