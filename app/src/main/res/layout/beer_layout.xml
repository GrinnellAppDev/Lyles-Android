<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/beer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_beer" />

    <RelativeLayout
        android:id="@+id/beer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/beer_image">

        <TextView
            android:id="@+id/beer_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/beer_name" />

        <TextView
            android:id="@+id/beer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/beer_name"
            android:text="@string/beer_type" />

    </RelativeLayout>



</RelativeLayout>