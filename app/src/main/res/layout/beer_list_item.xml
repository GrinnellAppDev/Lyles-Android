<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="48dp">

        <ImageView
            android:layout_width="@dimen/menu_image_len"
            android:layout_height="@dimen/menu_image_len"
            android:layout_alignParentTop="true"
            android:id="@+id/beer_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/beer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beer_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/beer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/beer_image"
            android:layout_alignLeft="@id/beer_image"
            android:layout_alignTop="@id/beer_name"
            android:text="@string/beer_type"/>

    </RelativeLayout>
</LinearLayout>